# SimpleClaw v2.0 - Environment Variables
# =========================================
# Copy this to .env and fill in your values

# ── Telegram ─────────────────────────────
SIMPLECLAW_TELEGRAM_TOKEN=your_telegram_bot_token_here
SIMPLECLAW_TELEGRAM_ADMIN_IDS=[123456789]

# ── Database ─────────────────────────────
SIMPLECLAW_DATABASE_URL=postgresql+psycopg://simpleclaw:simpleclaw@localhost:5432/simpleclaw

# ── Router Model (always on, lightweight) ─
SIMPLECLAW_ROUTER_PROVIDER=ollama
SIMPLECLAW_ROUTER_MODEL_ID=qwen3:0.6b
# SIMPLECLAW_ROUTER_API_KEY=
# SIMPLECLAW_ROUTER_API_BASE=http://localhost:11434

# ── Specialist Model (on demand, heavier) ─
SIMPLECLAW_SPECIALIST_PROVIDER=ollama
SIMPLECLAW_SPECIALIST_MODEL_ID=nanbeige4.1:3b
# SIMPLECLAW_SPECIALIST_API_KEY=
# SIMPLECLAW_SPECIALIST_API_BASE=http://localhost:11434

# ── To use OpenAI instead ────────────────
# SIMPLECLAW_ROUTER_PROVIDER=openai
# SIMPLECLAW_ROUTER_MODEL_ID=gpt-4.1-nano
# SIMPLECLAW_ROUTER_API_KEY=sk-xxx
# SIMPLECLAW_SPECIALIST_PROVIDER=openai
# SIMPLECLAW_SPECIALIST_MODEL_ID=gpt-4.1-mini
# SIMPLECLAW_SPECIALIST_API_KEY=sk-xxx

# ── To use Anthropic ─────────────────────
# SIMPLECLAW_ROUTER_PROVIDER=anthropic
# SIMPLECLAW_ROUTER_MODEL_ID=claude-haiku-4-5-20251001
# SIMPLECLAW_ROUTER_API_KEY=sk-ant-xxx
# SIMPLECLAW_SPECIALIST_PROVIDER=anthropic
# SIMPLECLAW_SPECIALIST_MODEL_ID=claude-sonnet-4-5-20250929
# SIMPLECLAW_SPECIALIST_API_KEY=sk-ant-xxx

# ── Security ─────────────────────────────
SIMPLECLAW_VAULT_MASTER_KEY=change_this_to_a_random_64_char_string

# ── Search ───────────────────────────────
SIMPLECLAW_SEARXNG_URL=http://localhost:8888

# ── Superset (Dashboards) ────────────────
# Credenciais ficam no Vault. Para configurar via Telegram:
# "Guardar no vault: superset_url = http://localhost:8088"
# "Guardar no vault: superset_username = admin"
# "Guardar no vault: superset_password = admin"

# ── General ──────────────────────────────
SIMPLECLAW_DEBUG=false
SIMPLECLAW_LOG_LEVEL=INFO
